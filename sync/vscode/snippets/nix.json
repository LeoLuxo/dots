		"prefix": "module",
		"body": [
			"{\n  lib,\n  config,\n  inputs,\n  pkgs,\n  ...\n}:\n\nlet\n  lib2 = inputs.self.lib;\n  inherit (lib2) enabled;\n  inherit (lib) types;\n\n  cfg = config.ext.$1;\nin\n{\n  options.ext.$1 = with lib2.options; {\n    enable = lib.mkEnableOption \"$2\";\n  };\n\n  config = lib.mkIf cfg.enable {\n    $0\n  };\n}"
		]
	},
