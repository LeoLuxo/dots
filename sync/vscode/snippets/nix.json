	"Make option": {
		"prefix": "mkOption",
		"body": [
			"mkOption { description = \"$3\"; type = types.$1; default = $2; };"
		]
	},
	"Make option with type nullOr": {
		"prefix": "mkOption nullOr",
		"body": [
			"mkOption { description = \"$2\"; type = types.nullOr types.$1; default = null; };"
		]
	},
	"Make option with type enum": {
		"prefix": "mkOption enum",
		"body": [
			"mkOption { description = \"$3\"; type = types.enum [$1]; default = $2; };"
		]
	},
	"Make enable option": {
		"prefix": "mkOption mkEnableOption",
		"body": [
			"mkEnableOption \"$1\";"
		]
	},
	"Make enable option with default": {
		"prefix": "mkOption mkEnableOption default",
		"body": [
			"mkEnableOption \"$1\" // {default = $2;};"
		]
	},
	"Make attribute set option": {
		"prefix": "mkOption mkAttrs",
		"body": [
			"mkAttrs { description = \"$1\"; default = {$3}; options = {$2}; };"
		]
